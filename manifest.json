{
  "manifest_version": 3,
  "name": "DashBlocker",
  "version": "1.0.0",
  "description": "Hides X posts containing em dashes.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
